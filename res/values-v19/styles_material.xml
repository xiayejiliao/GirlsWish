<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

     <!-- 溢出菜单样式 -->
    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:popupBackground">#ffffff</item>
        <item name="android:dropDownVerticalOffset">52dp</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>
    
    <style name="MaterialAppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 文本字体大小 -->
        <item name="android:textSize">18sp</item>
        <!-- activity 切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityanimation</item>
        <!-- drawer覆盖actionbar -->
        <!-- <item name="android:windowTranslucentStatus">true</item> -->
        
         <!-- 溢出菜单样式 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        
    </style>

    <style name="MaterialAppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 文本字体大小 -->
        <item name="android:textSize">18sp</item>
        <!-- activity 切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityanimation</item>
        
         <!-- 溢出菜单样式 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="IMTheme.Transparent" parent="@style/MaterialAppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>
    
    <style name="horizontal_slide" parent="@style/IMTheme.Transparent">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>
</resources>