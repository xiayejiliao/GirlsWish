<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MaterialAppTheme" parent="@android:style/Theme.Material.Light">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="android:colorPrimary">#2CA7DB</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">#2E93BD</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- actionbar 字体颜色 -->
        <item name="android:textColorPrimary">@color/actionbartextcolor</item>
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 文本字体大小 -->
        <item name="android:textSize">18sp</item>
        <!-- activity 切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityanimation</item>
    </style>

    <!-- 登录界面样式 -->
    <style name="Loginactivitystyle" parent="@style/MaterialAppTheme">

        <!-- 无actionbar -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- activity切换动画 -->
    <style name="activityanimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

</resources>