<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 定义共用的东西，不同styleable里的name不能重复 -->
    <attr name="text" format="string" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />

    <declare-styleable name="ButtonWithArrow">
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="lefttextValue" format="string" />
        <attr name="righttextValue" format="string" />
        <attr name="iconsrc" format="reference" />
        <attr name="iconvisiable">
            <flag name="invisible" value="3" />
            <flag name="gone" value="2" />
            <flag name="visiable" value="1" />
        </attr>
        <attr name="arrowvisiable">
            <flag name="invisible" value="3" />
            <flag name="gone" value="2" />
            <flag name="visiable" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ClearEditText">
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="hint" format="string" />
        <attr name="password" format="boolean" />
    </declare-styleable>
    <declare-styleable name="LinkTextView">
        <attr name="linktext" format="string"></attr>
        <attr name="clickcolor" format="color"></attr>
    </declare-styleable>
    
    <declare-styleable name="TextWithImageButton">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="imageSrc" format="reference"></attr>
        <attr name="imageClickSrc" format="reference"></attr>
        <attr name="textClickColor" format="color"></attr>
    </declare-styleable>

</resources>