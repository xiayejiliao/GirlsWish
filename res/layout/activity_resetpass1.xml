<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.tongjo.girlswish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tongjo.girlswish.ui.ResetPassActivity1" >

    <ImageView
        android:id="@+id/iv_resetpass1_logo"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/lblue" />

   	<LinearLayout
        android:id="@+id/linerlayout_resetpass1_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_resetpass1_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:drawableLeft="@drawable/test"
            android:hint="手机号" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bt_resetpass1_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="获取验证码" />

            <EditText
                android:id="@+id/et_resetpass1_code"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignBottom="@id/bt_register1_code"
                android:layout_toStartOf="@id/bt_register1_code"
                android:background="@null"
                android:drawableLeft="@drawable/test"
                android:hint="验证码" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>