<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tongjo="http://schemas.android.com/apk/res/com.tongjo.girlswish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    android:orientation="vertical"
    tools:context="com.tongjo.girlswish.LoginActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="15dp"
        android:background="@color/black" />

    <com.tongjo.girlswish.widget.ButtonWithArrow
        android:id="@+id/bt_setting_resetpass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/setting_broder"
        android:gravity="center_vertical"
        tongjo:iconvisiable="gone"
        tongjo:lefttextValue="修改密码" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black" />

    <com.tongjo.girlswish.widget.ButtonWithArrow
        android:id="@+id/bt_setting_suggest"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/setting_broder"
        android:gravity="center_vertical"
        tongjo:iconvisiable="gone"
        tongjo:lefttextValue="建议" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black" />

    <com.tongjo.girlswish.widget.ButtonWithArrow
        android:id="@+id/bt_setting_about"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/setting_broder"
        android:gravity="center_vertical"
        tongjo:iconvisiable="gone"
        tongjo:lefttextValue="关于" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black" />

    <Button
        android:id="@+id/bt_setting_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_bg_button_sure"
        android:gravity="center"
        android:text="退出应用" />

</LinearLayout>