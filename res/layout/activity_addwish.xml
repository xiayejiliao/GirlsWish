<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tongjo.girlswish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/wish_background"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp" >

            <!-- 心愿内容 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_44"
                android:background="@drawable/bg_wish_item"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_46"
                    android:layout_marginBottom="@dimen/margin_50"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10" >

                    <EditText
                        android:id="@+id/wish_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:lineSpacingExtra="@dimen/margin_12"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/margin_18"
                        android:gravity="left|top"
                        android:focusable="true"
                        android:maxLength="50"
                        android:maxLines="3"
                        android:minLines="3"
                        android:text="" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#979797"
                            android:layout_marginTop="@dimen/margin_24" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#979797"
                            android:layout_marginTop="@dimen/margin_32" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#979797"
                            android:layout_marginTop="@dimen/margin_32" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!-- 上面的绳子 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_60"
                android:layout_alignParentTop="true" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/line_horizontal"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/click" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>