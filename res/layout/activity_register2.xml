<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tongjo.girlswish.ui.RegisterActivity2" >

    <LinearLayout
        android:id="@+id/linerlayout_register2_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_register2_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:drawableLeft="@drawable/test"
            android:hint="名字" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <EditText
            android:id="@+id/et_register2_school"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:drawableLeft="@drawable/test"
            android:hint="学校" />

 
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/bt_register2_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="开启心愿之旅"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/iv_register2_personico"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_above="@+id/linerlayout_register2_input"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@drawable/logotwo" />

</RelativeLayout>