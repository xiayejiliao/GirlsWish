<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tongjo="http://schemas.android.com/apk/res/com.tongjo.girlswish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tongjo.girlswish.AboutActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="15dp"
        android:background="@color/black" />

    <com.tongjo.girlswish.widget.ButtonWithArrow
        android:id="@+id/bt_about_fun"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/setting_broder"
        android:gravity="center_vertical"
        tongjo:iconvisiable="gone"
        tongjo:lefttextValue="功能介绍" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black" />

    <com.tongjo.girlswish.widget.ButtonWithArrow
        android:id="@+id/bt_about_term"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/setting_broder"
        android:gravity="center_vertical"
        tongjo:iconvisiable="gone"
        tongjo:lefttextValue="服务条款" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black" />

</LinearLayout>