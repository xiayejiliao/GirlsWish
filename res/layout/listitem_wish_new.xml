<?xml version="1.0" encoding="utf-8"?>
<!-- 心愿墙的页面的Item布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tongjo.girlswish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/wish_background"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp" >

            <!-- 心愿内容 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_14"
                android:layout_marginTop="@dimen/margin_45"
                android:background="@drawable/bg_wish_item"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_10" >

                    <ImageView
                        android:id="@+id/wish_avatar"
                        android:layout_width="@dimen/margin_60"
                        android:layout_height="@dimen/margin_60"
                        android:src="@drawable/wish" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:layout_marginTop="@dimen/margin_6"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/wish_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户名"
                            android:textSize="@dimen/text_size_16" />

                        <ImageView
                            android:id="@+id/wish_sex"
                            android:layout_width="@dimen/margin_24"
                            android:layout_height="@dimen/margin_24"
                            android:layout_marginTop="@dimen/margin_6"
                            android:src="@drawable/femail" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/public_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:paddingTop="@dimen/margin_6"
                        android:text="6分钟前" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_marginBottom="@dimen/margin_40"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10" >

                    <TextView
                        android:id="@+id/wish_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:lineSpacingExtra="@dimen/margin_12"
                        android:textSize="@dimen/margin_18"
                        android:maxLines="3"
                        android:minLines="3"
                        android:text="\t\t\t\t我在测试下划线我在测试下划线，我在测试下划线，
                        我在测试下划线，我在测试下划线，我在测试下划线，我在测试下划线，我在测试下划线" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#979797"
                            android:layout_marginLeft="@dimen/margin_24"
                            android:layout_marginTop="@dimen/margin_24" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#979797"
                            android:layout_marginTop="@dimen/margin_32" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#979797"
                            android:layout_marginTop="@dimen/margin_32" />
                    </LinearLayout>
                </RelativeLayout>
                
                
            </LinearLayout>

            <!-- 上面的绳子 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_60"
                android:layout_alignParentTop="true" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/line_horizontal"
                    android:padding="0dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/click" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>