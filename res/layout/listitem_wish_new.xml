<?xml version="1.0" encoding="utf-8"?>
<!-- 心愿墙的页面的Item布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tongjo.girlswish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- 心愿内容 -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_14"
        android:layout_marginRight="@dimen/margin_14"
        android:layout_marginTop="@dimen/margin_30"
        app:cardBackgroundColor="@color/wish_background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_wish_item"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10" >

                <ImageView
                    android:id="@+id/wish_avatar"
                    android:layout_width="@dimen/margin_56"
                    android:layout_height="@dimen/margin_56"
                    android:src="@drawable/wish" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_14"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/wish_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="同济大学"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/public_time"
                            android:layout_width="@dimen/margin_100"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1.0"
                            android:gravity="right"
                            android:singleLine="true"
                            android:textColor="#9b9b9b"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/wish_sex"
                        android:layout_width="@dimen/margin_18"
                        android:layout_height="@dimen/margin_18"
                        android:layout_marginTop="@dimen/margin_6"
                        android:src="@drawable/women" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_40"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_14"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10" >

                <TextView
                    android:id="@+id/wish_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:lineSpacingExtra="@dimen/margin_12"
                    android:maxLines="3"
                    android:minLines="3"
                    android:text="\t\t\t\t我在测试下划线我在测试下划线，我在测试下划线，
                        我在测试下划线，我在测试下划线，我在测试下划线，我在测试下划线，我在测试下划线"
                    android:textSize="@dimen/margin_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_24"
                        android:layout_marginTop="@dimen/margin_24"
                        android:background="#979797" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_32"
                        android:background="#979797" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_32"
                        android:background="#979797" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <!-- 上面的绳子 -->


