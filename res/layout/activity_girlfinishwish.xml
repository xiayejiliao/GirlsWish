<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="摘取者信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <com.tongjo.girlswish.widget.CircleImageView
            android:id="@+id/iv_grilfinishwish_pickericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_grilfinishwish_pickername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="picker name" />

            <TextView
                android:id="@+id/tv_grilfinishwish_pickerschool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="picked school" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:alpha="0.5"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_grilfinishwish_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="电话 :" />

        <TextView
            android:id="@+id/tv_grilfinishwish_pickerphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_grilfinishwish_phone"
            android:text="电话号码:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_grilfinishwish_sendmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_bg_button_sure"
            android:text="发短信"
            android:textColor="@color/mlblack" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:alpha="0.5"
        android:background="@color/black" />

    <EditText
        android:id="@+id/tv_grilfinishwish_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:editable="false"
        android:minHeight="70dp"
        android:text="心愿内容"
        android:textColor="@color/mlblack" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:alpha="0.5"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_grilfinishwish_picktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="完成时间" />

        <Button
            android:id="@+id/bt_grilfinishwish_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_bg_button_sure"
            android:text="确认删除"
            android:textColor="@color/mlblack" />
    </RelativeLayout>

</LinearLayout>