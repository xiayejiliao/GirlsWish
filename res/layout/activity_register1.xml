<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.tongjo.girlswish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tongjo.girlswish.ui.RegisterActivity1" >

    <ImageView
        android:id="@+id/iv_register1_logo"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/logotwo" />

    <LinearLayout
        android:id="@+id/linerlayout_register1_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/login_phonedescription"
                android:src="@drawable/icon_phone" />

            <EditText
                android:id="@+id/et_register1_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:inputType="phone"
                android:hint="@string/register_phone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/login_phonedescription"
                android:src="@drawable/icon_password" />

            <EditText
                android:id="@+id/et_register1_pass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="@string/register_password" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_register_captcha"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_captcha" />

            <Button
                android:id="@+id/bt_register1_getcaptcha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="获取验证码" 
                android:textColor="@color/register_getcaptcha_textcolor"
                android:background="@drawable/selector_bg_button_getcaptcha"/>

            <EditText
                android:id="@+id/et_register1_captcha"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_toLeftOf="@id/bt_register1_getcaptcha"
                android:layout_toRightOf="@id/iv_register_captcha"
                android:background="@null"
                android:hint="@string/register_captcha" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/bt_register1_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@drawable/selector_bg_button_sure" />
    </LinearLayout>

    <com.tongjo.girlswish.widget.LinkTextView
        android:id="@+id/ltv_register1_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:textColor="@color/register_login_textcolor"
        app:clickcolor="@color/red"
        app:linktext="已有账号？登陆" />

</RelativeLayout>