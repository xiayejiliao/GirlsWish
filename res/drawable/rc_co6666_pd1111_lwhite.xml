<?xml version="1.0" encoding="UTF-8"?>
<!-- 带有边角的长方形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- 定义填充渐变颜色 -->
    <gradient
        android:angle="45"
        android:endColor="@color/lwhite"
        android:startColor="@color/lwhite" />

    <!-- 设置内填充 -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

    <!-- 设置圆角矩形 -->
    <corners android:radius="6.0dip" />

    <!-- 设置边框 -->
    <stroke
        android:width="1dip"
        android:color="@color/rectangle_border" />
</shape>